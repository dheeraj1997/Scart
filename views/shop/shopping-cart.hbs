{{#if products}}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{# each products }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{ this.item.title }}</strong>
                        <span class="label label-success">${{ this.price }}</span>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col-sm-12 col-md-2 col-md-offset-3 col-sm-offset-3">
            <a href="/checkout" class="btn btn-success" type="button">Checkout</a>
        </div>
        <div class="col-sm-12 col-md-2 col-md-offset-3 col-sm-offset-3">
            <a href="/clear-cart" class="btn btn-danger" type="button">Clear cart</a>
        </div>
    </div>

{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>No Items in cart</h2>
        </div>
    </div>
{{/if}}
